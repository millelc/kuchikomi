{% extends "obdoKuchiKomiBundle::base.html.twig" %}


{% block kk_body_KuchiKomiBundle %}

<h3>{{ action }} un Kuchi</h3>
<div class="well">
    <form method="post" {{ form_enctype(form) }} >
        {{ form_errors(form) }}
{#        {{ form_widget(form) }}#}
        <table>
            <tr>
                <td>{{ form_label(form.name, "Nom") }}</td>
                <td>{{ form_errors(form.name) }}
                    {{ form_widget(form.name) }}
                </td>
            </tr>
            <tr>
                <td>{{ form_label(form.password, "Mot de passe") }}</td>
                <td>{{ form_errors(form.password) }}
                    {{ form_widget(form.password) }}
                </td>
            </tr>
        
            <tr>
                <td>{{ form_label(form.address.address1, "Adresse 1") }}</td>
                <td>{{ form_errors(form.address.address1) }}
                    {{ form_widget(form.address.address1) }}
                </td>
            </tr>
            <tr> 
                <td>{{ form_label(form.address.address2, "Adresse 2") }}</td>
                <td>{{ form_errors(form.address.address2) }}
                    {{ form_widget(form.address.address2) }}
                </td>
            </tr>
            <tr>
                <td>{{ form_label(form.address.address3, "Adresse 3") }}</td>
                <td>{{ form_errors(form.address.address3) }}
                    {{ form_widget(form.address.address3) }}
                </td>
            </tr>
            
            <tr>    
                <td>{{ form_label(form.address.postalCode, "Code Postal") }}</td>
                <td>{{ form_errors(form.address.postalCode) }}
                    {{ form_widget(form.address.postalCode) }}
                </td>
            </tr>
            <tr> 
                <td>{{ form_label(form.address.city, "Ville") }}</td>
                <td>{{ form_errors(form.address.city) }}
                    {{ form_widget(form.address.city) }}
                </td>
            </tr>
            <tr>
                <td>{{ form_label(form.phoneNumber, "N° téléphone") }}</td>
                <td>{{ form_errors(form.phoneNumber) }}
                    {{ form_widget(form.phoneNumber) }}
                </td>
            </tr>
            <tr>
                <td>{{ form_label(form.mailAddress, "e-mail") }}</td>
                <td>{{ form_errors(form.mailAddress) }}
                    {{ form_widget(form.mailAddress) }}
                </td>
            </tr>
            <tr>
                <td>{{ form_label(form.webSite, "site web (http://...)") }}</td>
                <td>{{ form_errors(form.webSite) }}
                    {{ form_widget(form.webSite) }}
                </td>
            </tr>
            <tr>
                <td>{{ form_label(form.logoimg, "Logo du kuchi") }}</td>
                <td>{{ form_errors(form.logoimg) }}
                    {{ form_widget(form.logoimg) }}
                </td>
            </tr>
            <tr>
                <td>{{ form_label(form.photoimg, "Photo du kuchi") }}</td>
                <td>{{ form_errors(form.photoimg) }}
                    {{ form_widget(form.photoimg) }}
                </td>
            </tr>
        </table>
        
        <br />
      
        {{ form_rest(form) }}
        <input type="submit" class="btn btn-primary" />
    </form>
</div>


{% endblock %}