{# app/Resources/views/base.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        {% block kk_meta %}
            <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        {% endblock %}
        
        <title>{% block title %}CityKomi{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('citykomi_logo.png') }}" />

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('css/kuchikomi.css') }}" type="text/css">
        {% endblock %}
    </head>

    <body>

        {{ render(controller("obdoKuchiKomiMenuBundle:MainMenu:mainMenu")) }}      
    
        <div class="container">
            {% block kk_body %}
            {% endblock %}
        </div>

        {% block javascripts %}
            {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalit√©s du bootstrap Twitter #}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
            <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
        {% endblock %}

    </body>
</html>